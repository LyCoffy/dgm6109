  <!-- An in-text link -->
  <a href="https://link.com">An in-text link</a>

  <!-- An image and caption:
  I ask google "how to write and image with captions in html5" and 
  the google ai answer with the step by step on how to do this next section -->
  <figure>
    <img src="image1.jpg" alt="Description of image 1">
    <figcaption>This is the caption</figcaption>
  </figure>

  <!-- Image inside a link -->
  <a href="https://link_for_image.com">
    <img src="image2.jpg" alt="Image inside a link">
  </a>

  <!-- Four levels of headings -->
  <h1>Main Heading 1</h1>
  <h2>Subheading 2</h2>
  <h3>Subheading 3</h3>
  <h4>Subheading 4</h4>

  <!-- A paragraph -->
